
# ===============================
# Stage 1: Build
# ===============================
FROM node:20-alpine AS build

WORKDIR /app

# Copy dependency files first for layer caching
COPY package.json package-lock.json ./

# Install exact dependencies
RUN npm ci

# Copy application source
COPY . .

# Build production assets (Vite â†’ dist/)
RUN npm run build


# ===============================
# Stage 2: Runtime
# ===============================
FROM node:20-alpine

WORKDIR /app

# Install lightweight static file server
RUN npm install -g serve

# Copy built files from build stage
COPY --from=build /app/dist ./dist

# Expose application port
EXPOSE 3000

# Serve static build (SPA-safe)
CMD ["serve", "-s", "dist", "-l", "3000"]


ENV file of admin_ui---

VITE_API_URL="http://greenstechnology.echodemo.site:5000/api"
VITE_IMAGE_URL="http://greenstechnology.echodemo.site:5000"
NODE_ENV="test"
REACT_APP_NAME="GreenTech Admin"
REACT_APP_VERSION="1.0.0"
VITE_APP_PORT=5000

